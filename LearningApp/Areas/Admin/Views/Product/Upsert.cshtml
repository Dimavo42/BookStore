@model ProductVM

<div class="container">
    <div class="row">
        <div class="col-10">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Product.Id" hidden />
                <input asp-for="Product.ImageUrl" hidden />
                <div class="row pb-2">
                    <h2 class="text-primary">@(Model.Product.Id != 0 ? "Update" : "Add ") Book</h2>
                </div>
                <div class="mb-3 row" p-1>
                    <label asp-for="Product.Title" class="p-0">Title</label>
                    <input asp-for="Product.Title" type="text" class="form-control" />
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div class="mb-3 row" p-1>
                    <label asp-for="Product.ISBN" class="p-0">ISBN</label>
                    <input asp-for="Product.ISBN" type="text" class="form-control" />
                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                </div>
                <div class="mb-3 row" p-1>
                    <label asp-for="Product.Author" class="p-0">Author</label>
                    <input asp-for="Product.Author" type="text" class="form-control" />
                    <span asp-validation-for="Product.Author" class="text-danger"></span>
                </div>
                <div class="mb-3 row" p-1>
                    <label asp-for="Product.Price" class="p-0">Price</label>
                    <input asp-for="Product.Price" type="text" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="mb-3 row" p-1>
                    <label asp-for="Product.ListPrice" class="p-0">List Price</label>
                    <input asp-for="Product.ListPrice" type="text" class="form-control" />
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                </div>
                <div class="mb-3 row" p-1>
                    <label asp-for="Product.Price50" class="p-0">Price50</label>
                    <input asp-for="Product.Price50" type="text" class="form-control" />
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>
                </div>
                <div class="mb-3 row" p-1>
                    <label asp-for="Product.Price100" class="p-0">Price100</label>
                    <input asp-for="Product.Price100" type="text" class="form-control" />
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
                </div>
                @* <div class="mb-3 row" p-1>
                <label asp-for="Product.CategoryId" class="p-0">CategoryId</label>
                @*asp-items="@(ViewData["CategoryList"] as IEnumerable<SelectListItem>)"
                View Data option to edit and viewbag!
                asp-items="ViewBag.CategoryList"
                </div>*@
                <div class="mb-3 row" p-1>
                    <label asp-for="Product.ImageUrl" class="p-0">Image URL</label>
                    <input asp-for="Product.ImageUrl" type="file" name="file" class="form-control" />
                </div>
                <div class="mb-3 row" p-1>
                    <label asp-for="Product.CategoryId" class="p-0">CategoryId</label>
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col mt-3">
                        @if (Model.Product.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        }
                    </div>
                </div>
            </form>
        </div>
        <div class="col-2">
            @if (Model.Product.Id != 0)
            {
                <label asp-for="@Model.Product.ImageUrl" class="p-2">Edit Image</label>
                <img src="@Model.Product.ImageUrl" width="100%"
                     style="border-radius:5px; border:1px" />
            }
        </div>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}